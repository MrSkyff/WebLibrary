@model ArticleViewModel

<div class="bg-success border rounded mb-2">
    <section class="p-1 r w-100">

        <div class="form-group">
            <h1 style="padding-left: 10px;" class="text-white">
                @Model.Article.Title
                @if (User.Identity.IsAuthenticated && Model.User.Id == User.FindFirst("UserId").Value)
                {
                    <button class="btn btn-sm dropdown-toggle text-white" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Options
                    </button>
                    <ul class="dropdown-menu w-auto">
                        <li><a asp-area="Library" asp-controller="ArticleManager" asp-action="Edit" asp-route-value="@Model.Article.Id" class="dropdown-item">Edit</a></li>
                    </ul>
                }
            </h1>
        </div>

    </section>
</div>

<div class="bg-white border rounded" style="margin-bottom: 8px;">
    <section class="p-1 r w-100">
        <p class="m-2"><b>Description:</b> @Html.Raw(Model.Article.Description)</p>
    </section>
</div>


