@model ArticleViewModel

<div class="bg-white border rounded mb-2">
    <section class="p-3 r w-100">

        <input type="hidden" asp-for="@Model.Article.Id" />
        <input type="hidden" asp-for="@Model.Article.UserId" />
        <input type="hidden" asp-for="@Model.Article.LibraryId" />

        <div class="form-group">
            <label for="Title" class="col-sm-2 control-label">Title:</label>
            <div>
                <input type="text" asp-for="@Model.Article.Title" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="Url" class="col-sm-2 control-label">Url:</label>
            <div>
                <input type="text" asp-for="@Model.Article.Url" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="Description" class="col-sm-2 control-label">Description:</label>
            <div>
                <textarea asp-for="@Model.Article.Description" class="form-control" id="description">@Model.Article.Description</textarea>
            </div>
        </div>
    </section>
</div>

