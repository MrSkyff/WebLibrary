@model CategoryViewModel



<h1>Category: @Model.Category.Name</h1>

@foreach (var article in Model.Articles)
{

    <div class="card">


        <h5 class="card-header d-flex justify-content-between align-items-center">

            <div class="col"> @article.Title</div>

            @if (true)
            {
                <button class="btn btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Options
                </button>
                <ul class="dropdown-menu w-auto">
                    <li><a asp-area="Library" asp-controller="ArticleManager" asp-action="Edit" asp-route-value="@article.Id" class="dropdown-item">Edit</a></li>
                </ul>
            }
        </h5>

        <div class="card-body">
            <p class="card-text">@Html.Raw(article.Description)</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-controller="Article" asp-action="Read" asp-route-id="@article.Id" class="link">Read more</a>
            </div>
        </div>

    </div>
    <br>


}
